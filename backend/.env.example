# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=educlove

# Auth0 Configuration
# Get these values from your Auth0 dashboard
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-tenant.auth0.com/api/v2/
AUTH0_CONNECTION=Username-Password-Authentication

# For development, you can skip Auth0 and use mock authentication
SKIP_AUTH0=false

# JWT Configuration for Google OAuth (if using Google instead of Auth0)
# For development, we'll skip JWT verification to simplify testing
SKIP_JWT_VERIFICATION=true

# For production with Google OAuth:
# JWKS_URI=https://www.googleapis.com/oauth2/v3/certs
# JWT_ISSUER=https://accounts.google.com
# JWT_AUDIENCE=your-google-client-id.apps.googleusercontent.com
# JWT_ALGORITHM=RS256

# Development secret (for local testing)
JWT_SECRET=your-secret-key-for-dev

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Geocoding Configuration
# Provider options: nominatim (default), google, mapbox
GEOCODING_PROVIDER=nominatim
GEOCODING_TIMEOUT=10

# For Google Maps (if using google provider)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# For Mapbox (if using mapbox provider)
# MAPBOX_API_KEY=your-mapbox-api-key
