# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=educlove

# JWT Configuration for Google OAuth
# For development, we'll skip JWT verification to simplify testing
SKIP_JWT_VERIFICATION=true

# For production, you would set these:
# JWKS_URI=https://www.googleapis.com/oauth2/v3/certs
# JWT_ISSUER=https://accounts.google.com
# JWT_AUDIENCE=your-google-client-id.apps.googleusercontent.com
# JWT_ALGORITHM=RS256

# Development secret (not used with Google OAuth, but kept for flexibility)
JWT_SECRET=your-secret-key-for-dev

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Geocoding Configuration
# Provider options: nominatim (default), google, mapbox
GEOCODING_PROVIDER=nominatim
GEOCODING_TIMEOUT=10

# For Google Maps (if using google provider)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# For Mapbox (if using mapbox provider)
# MAPBOX_API_KEY=your-mapbox-api-key
