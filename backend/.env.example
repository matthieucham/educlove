# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=educlove

# Auth0 Configuration (Production)
# Get these values from your Auth0 dashboard
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-tenant.auth0.com/api/v2/
AUTH0_CONNECTION=Username-Password-Authentication

# For development, you can skip Auth0 and use local authentication
SKIP_AUTH0=true

# JWT Configuration for local development
# For development, we'll skip JWT verification to simplify testing
SKIP_JWT_VERIFICATION=true

# Development secret (for local testing)
JWT_SECRET=your-secret-key-for-dev

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Geocoding Configuration
# Provider options: nominatim (default), mapbox
GEOCODING_PROVIDER=nominatim
GEOCODING_TIMEOUT=10

# For Mapbox (if using mapbox provider)
# MAPBOX_API_KEY=your-mapbox-api-key
